{
    "compilerOptions": {
      "target": "ES2022", 
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "noEmit": true,
      "allowImportingTsExtensions": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  